---
import BackHome from '@/icons/BackHome.astro'
import { Link } from '@/shared/components/Links/Links'
import ThemeSwitcher from '@/shared/components/ThemeSwitcher/ThemeSwitcher'
import AppearanceSettings from '@/shared/components/AppearanceSettings/AppearanceSettings'

const { returnHome } = Astro.props
---

<nav class="absolute flex w-full flex-row justify-between p-3">
  <Link target="_self" ariaLabel="regreso a pagina principal" variant="ghost" href="/">
    {
      returnHome === 'true' && (
        <BackHome class="text-rice hover:text-matcha h-10 w-10 hover:cursor-pointer" />
      )
    }
  </Link>
  <AppearanceSettings className="mr-3" client:load />
</nav>
