---
import ArrowIcon from "../../icons/ArrowIcon.astro";
import BackHome from "../../icons/BackHome.astro";
import HeadingWithLine from "../../shared/components/HeadingWithLine/HeadingWithLine";

const { title, company } = Astro.props;
---

<section class="p-4">
    <a href="/">
        <BackHome
            class="w-10 h-10 text-rice hover:text-matcha hover:cursor-pointer"
        />
    </a>

    <h1 class="mt-3 text-rice text-5xl md:text-6xl font-bold">{title}</h1>

    <HeadingWithLine
        tag="h2"
        color="matcha"
        lineColor="wasabi"
        className=""
        animation="false"
        position="center">{company}</HeadingWithLine
    >
</section>
