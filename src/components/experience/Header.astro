---
import { AccentHeadingSubtitle } from '@/shared/components/AccentHeading/AccentHeading'

const { title, company } = Astro.props
---

<section class="flex w-5/6 flex-col items-center justify-center p-4">
  <div>
    <h1 class="text-deep-black dark:text-rice mt-12 text-5xl font-bold md:text-6xl">
      {title}
    </h1>
    <AccentHeadingSubtitle color="matcha" animation="true" position="center"
      >{company}</AccentHeadingSubtitle
    >
  </div>
</section>
