{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },

  "prettier.configPath": ".prettierrc",

  "tailwindCSS.experimental.classRegex": [
    "class(?:Name)?=\"([^\"]*)\"",
    "class(?:Name)?=\\{`([^`]*)`\\}"
  ]
}
